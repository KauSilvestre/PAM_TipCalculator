<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
        Text="conta"/>
            <Entry
        x:Name="AmountEntry"
        Placeholder="Digite aqui"/>
            <Label
        Text="Gorjeta:"/>
            <Label
        x:Name="TipLabel"
        Text="0,00"/>
            <Label
        Text="Total:"/>
            <Label
        x:Name="TotalLAbel"
        Text="0.00"/>
            <Label
        Text="0,00"/>
            <Label
        Text="Percentual da gorjeta"/>
            <Label
        x:Name="TipPercentLabeal"
        Text="10%"/>
            <Slider
                x:Name="TipSlader"
                 Maximum="50"
                 Minimum="-1"
                Value="20"/>
            <Button x:Name="setLowTip" Text="15%" Clicked="setLowTip_Clicked"/>
            <Button x:Name="setHighTip" 
                    Text="20%" 
                    Clicked="setLowTip_Clicked"/>
            <Button x:Name="RoundUpButton" Text="Arredondar para cima" Clicked="setLowTip_Clicked"/>
            <Button x:Name="RoundDownButton" Text="Arredondar para baixo" Clicked="setLowTip_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
